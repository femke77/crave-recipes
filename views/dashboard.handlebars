{{!-- modal --}}
<div class="modal" id="recipeNotes">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Your Recipe Notes</p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <!-- Content - filled dynamically if present -->
            <div class="field">
                <label class="label"></label>
                <div class="control is-expanded">
                    <textarea class="textarea required" id="userNotes"
                        placeholder="This was delicious, it was refreshing for a summer day..." rows="3"></textarea>
                </div>
            </div>
        </section>
        {{!-- End Content --}}
        <footer class="modal-card-foot">
            <button class="button is-info" id="saveNote">Save changes</button>
            <button class="button" id="closeModal">Cancel</button>
        </footer>
    </div>
</div>
{{!-- end modal --}}

