<!DOCTYPE html>
<html>

<head>
    <title>Sign In Here ! </title>
</head>

<body>
    <div class="container">
        <div class="column is-centerd">
            <div class="column">
                <form id="signup" action="/signup" method="post" class="box">
                    <div class="field">
                        <div class="control">
                            <label for="email">Email Adress : </label>
                            <input class="input is-primary" name="email" type="email" placeholder="Primary input">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label for="firstname">Frist Name : </label>
                            <input class="input is-info" name="firstname" type="text" placeholder="Primary input">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label for="lastname">Last Name : </label>
                            <input class="input is-success" name="lastname" type="text" placeholder="Primary input">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label for="username">User Name : </label>
                            <input class="input is-warning" name="username" type="text"
                                placeholder="Primary input">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label for="password">Password: </label>
                            <input class="input is-danger" name="password" type="text" placeholder="Primary input">
                            <hr>
                            <button class="button is-info" type="submit" value="Sign up">Submit</button>
                            <button class="button is-info" type="submit" id="cancel">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>

    <script>$("#dash").hide();
        $("#logout").hide(); 
        $("#cancel").on("click", function(event){
    console.log("you clicked on me");
    window.location.href = "/";
    return false;
  });</script>

</body>

</html>